---
mock_modules:
  - postconf

skip_list:
  - yaml[line-length]   # 80 chars? nope...
  - yaml[octal-values]  # Sorry yamllint, octal is clearer than 'u+rwx,g+rx,o+rx'

warn_list:
  - ignore-errors
  - yaml
  - fqcn-builtins
  - schema
  - meta-no-info
  - no-changed-when
  - name[casing]
  - name[missing]
  - name[template]
  - jinja[spacing]
  - deprecated-module
  - name[play]
  - meta-incorrect

