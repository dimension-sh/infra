---
mock_modules:
  - postconf

skip_list:
  - yaml[line-length]
  - name[missing]

warn_list:
  - ignore-errors
  - yaml
  - fqcn-builtins
  - schema
  - meta-no-info
  - no-changed-when
  - name[casing]
  - name[missing]
  - name[template]
  - jinja[spacing]
  - var-naming[no-role-prefix]

exclude_paths:
  - ./.venv
  - ~/.ansible/roles
